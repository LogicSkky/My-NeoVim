{
	"explorer.icon.enableNerdfont": true,
	"explorer.width": 30,
	"explorer.icon.enableVimDevicons": true,
	"explorer.keyMappings": {
		"h": "unmap",
		
		"i": "nodePrev",
		"k": "nodeNext",
		"gi": "expandablePrev",
		"gk": "expandableNext",
		
		"*": "toggleSelection",
		"<tab>": "actionMenu",
		
		"j": "collapse",
		"l": ["expandable?", "expand", "open"],
		"K": ["toggleSelection", "nodeNext"],
		"I": ["toggleSelection", "nodePrev"],
		"gl": "expandRecursive",
		"gj": "collapseRecursive",
		"o": "expandOrCollapse",
		"<cr>": ["expandable?", "cd", "open"],
		"e": "open",
		"s": "open:split",
		"S": "open:split:plain",
		"E": "open:vsplit",
		"t": "open:tab",
		"<bs>": "gotoParent",
		"gp": "preview:labeling",
		
		"y": "copyFilepath",
		"Y": "copyFilename",
		"c": "copyFile",
		"x": "cutFile",
		"p": "pasteFile",
		"d": "delete",
		"D": "deleteForever",
		
		"a": "addFile",
		"A": "addDirectory",
		"r": "rename",
		
		".": "toggleHidden",
		"R": "refresh",
		
		"?": "help",
		"q": "quit",
		"<esc>": "esc",
		"X": "systemExecute",
		"gd": "listDrive",
		
		"f": "search",
		"F": "searchRecursive",
		
		"gf": "gotoSource:file",
		"gb": "gotoSource:buffer",
		
		"[[": "sourcePrev",
		"]]": "sourceNext",
		
		"[d": "diagnosticPrev",
		"]d": "diagnosticNext",
		
		"[c": "gitPrev",
		"]c": "gitNext",
		"<<": "gitStage",
		">>": "gitUnstage"
	},
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	}
}
